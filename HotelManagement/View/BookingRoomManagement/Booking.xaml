<Window x:Class="HotelManagement.View.BookingRoomManagement.Booking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagement.View.BookingRoomManagement"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="Booking" Height="750" Width="600">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" 
                   Source="{StaticResource LogoDark}" 
                   Height="60" Width="70"/>
            <Label Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   Margin="50 0 0 0" 
                   Content="ĐẶT PHÒNG" 
                   FontSize="24" 
                   Foreground="#009099" 
                   FontWeight="Bold"/>
            <Button Grid.Column="2" 
                    BorderThickness="0" 
                    Background="Transparent" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0 0 10 0" 
                    Height="50" Width="50" 
                    HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Center">
                <Image Source="{StaticResource Button_X}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"  
                       Height="26" Width="30" />
            </Button>
        </Grid>

        <Grid Grid.Row="1" Margin="20 0 20 0" >
            <Border CornerRadius="4" Background="#009099"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Content="THÔNG TIN KHÁCH HÀNG" 
                   FontSize="18" 
                   Foreground="#C95D3B" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" 
                   Margin="30 0 0 0"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Tên khách hàng:" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>
                    <TextBox Grid.Row="1" 
                             Padding="10 0 10 0" 
                             HorizontalAlignment="Left" 
                             HorizontalContentAlignment="Left" 
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Center" 
                             FontSize="16" 
                             Foreground="#686868" 
                             Margin="28 0 0 0" 
                             Height="30" Width="240" 
                             materialDesign:HintAssist.Hint="Nhập tên khách hàng" 
                             BorderThickness="0.5" 
                             BorderBrush="#545454"/>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="CMND / CCCD:" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>

                    <TextBox Grid.Row="1" 
                             Padding="10 0 10 0" 
                             HorizontalAlignment="Left" 
                             HorizontalContentAlignment="Left" 
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Center" 
                             FontSize="16" 
                             Foreground="#686868" 
                             Margin="28 0 0 0" 
                             Height="30" Width="240" 
                             materialDesign:HintAssist.Hint="Nhập CMND / CCCD (12 số)" 
                             BorderThickness="0.5" 
                             BorderBrush="#545454"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Số điện thoại:" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>
                    <TextBox Grid.Row="1" 
                             Padding="10 0 10 0" 
                             HorizontalAlignment="Left" 
                             HorizontalContentAlignment="Left" 
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Center" 
                             FontSize="16" 
                             Foreground="#686868" 
                             Margin="28 0 0 0" 
                             Height="30" Width="240" 
                             materialDesign:HintAssist.Hint="Nhập số điện thoại" 
                             BorderThickness="0.5" 
                             BorderBrush="#545454"/>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Email: " 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>
                    <TextBox Grid.Row="1" 
                             Padding="10 0 10 0" 
                             HorizontalAlignment="Left" 
                             HorizontalContentAlignment="Left" 
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Center" 
                             FontSize="16" 
                             Foreground="#686868" 
                             Margin="28 0 0 0" 
                             Height="30" Width="240" 
                             materialDesign:HintAssist.Hint="Nhập địa chỉ email" 
                             BorderThickness="0.5" 
                             BorderBrush="#545454"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Ngày sinh: " 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>

                    <Border Grid.Row="1" 
                            Height="30" Width="240" 
                            BorderThickness="0.5" 
                            BorderBrush="#545454" 
                            CornerRadius="0">
                        <DatePicker Padding="10 0 20 0" 
                                    HorizontalAlignment="Left" 
                                    VerticalContentAlignment="Center" 
                                    FontSize="16" 
                                    Foreground="#686868" 
                                    Height="30" Width="240" 
                                    materialDesign:HintAssist.Hint="Chọn dd/mm/yy"/>
                    </Border>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Địa chỉ: " 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>

                    <TextBox Grid.Row="1" 
                             Padding="10 0 10 0" 
                             HorizontalAlignment="Left" 
                             HorizontalContentAlignment="Left" 
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Center" 
                             FontSize="16" 
                             Foreground="#686868" 
                             Margin="28 0 0 0" 
                             Height="30" Width="240" 
                             materialDesign:HintAssist.Hint="Nhập địa chỉ" 
                             BorderThickness="0.5" 
                             BorderBrush="#545454"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="30*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Giới tính:" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>
                    <Border Grid.Row="1" 
                            Background="White" 
                            Width="140" Height="30" 
                            Margin="20 0 0 0" 
                            BorderBrush="#606060"
                            BorderThickness="0.5">
                        <ComboBox Width="140" Height="30"
                                  Padding="10 2"
                                  BorderBrush="#606060"
                                  BorderThickness="0.5"
                                  Foreground="#686868"
                                  SelectedIndex="0"
                                  FontSize="16"
                                  HorizontalContentAlignment="Center">
                            <ComboBoxItem  Content="Nam" FontSize="16" Foreground="Black"/>
                            <ComboBoxItem  Content="Nữ" FontSize="16" Foreground="Black"/>
                        </ComboBox>
                    </Border>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Loại khách hàng:" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>
                    <Border Grid.Row="1" 
                            Background="White" 
                            Width="180" Height="30" 
                            BorderBrush="#606060"
                            BorderThickness="0.5">
                        <ComboBox Width="180" Height="30"
                                  Padding="10 2"
                                  BorderBrush="#606060"
                                  BorderThickness="0.5"
                                  Foreground="#686868"
                                  SelectedIndex="0"
                                  FontSize="16"
                                  HorizontalContentAlignment="Center">
                            <ComboBoxItem  Content="Khách nước ngoài" FontSize="16" Foreground="Black"/>
                            <ComboBoxItem  Content="Khách nội địa" FontSize="16" Foreground="Black"/>
                        </ComboBox>
                    </Border>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Số người:" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="10 0 0 0" 
                           VerticalAlignment="Top"/>

                    <Border Grid.Row="1" 
                            Background="White" 
                            Width="136" Height="30" 
                            BorderBrush="#606060" 
                            BorderThickness="0.5" 
                            HorizontalAlignment="Left" 
                            Margin="12 0 0 0">
                        <ComboBox     Width="136" Height="30"
                                      Padding="10 2"
                                      BorderBrush="#606060"
                                      BorderThickness="0.5"
                                      Foreground="#686868"
                                      SelectedIndex="0"
                                      FontSize="16"
                                      HorizontalContentAlignment="Center">
                            <ComboBoxItem  Content="1" FontSize="16" Foreground="Black"/>
                            <ComboBoxItem  Content="2" FontSize="16" Foreground="Black"/>
                            <ComboBoxItem  Content="3" FontSize="16" Foreground="Black"/>
                        </ComboBox>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Border Grid.Row="3" 
                Margin="60 0 60 0" 
                BorderBrush="Black" 
                BorderThickness="0 0 0 2"/>

        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="32*"/>
                <RowDefinition Height="68*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Content="THÔNG TIN THỜI GIAN THUÊ/TRẢ PHÒNG" 
                   FontSize="18" 
                   Foreground="#C95D3B" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   VerticalContentAlignment="Top" 
                   Margin="30 0 0 0"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Ngày bắt đầu thuê: " 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>

                    <Border Grid.Row="1" 
                            Height="30" 
                            Width="240" 
                            BorderThickness="0.5" 
                            BorderBrush="#545454" 
                            CornerRadius="0">
                        <DatePicker Padding="10 0 20 0" 
                                    HorizontalAlignment="Left" 
                                    VerticalContentAlignment="Center" 
                                    FontSize="16" 
                                    Foreground="#686868" 
                                    Height="30" Width="240" 
                                    materialDesign:HintAssist.Hint="Chọn dd/mm/yy"/>
                    </Border>

                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="53*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Content="Ngày kết thúc thuê: " 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           FontSize="14" 
                           Margin="30 0 0 0" 
                           VerticalAlignment="Top"/>

                    <Border Grid.Row="1" 
                            Height="30" 
                            Width="240" 
                            BorderThickness="0.5" 
                            BorderBrush="#545454" 
                            CornerRadius="0">
                        <DatePicker Padding="10 0 20 0" 
                                    HorizontalAlignment="Left" 
                                    VerticalContentAlignment="Center" 
                                    FontSize="16" 
                                    Foreground="#686868" 
                                    Height="30" Width="240" 
                                    materialDesign:HintAssist.Hint="Chọn dd/mm/yy"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="86*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" 
                       Content="DANH SÁCH PHÒNG TRỐNG" 
                       FontSize="18" Foreground="#C95D3B" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       VerticalContentAlignment="Top" 
                       Margin="30 0 0 0"/>

                <Grid Grid.Row="1">
                    <Border Margin="30 0 30 0" 
                            CornerRadius="5" 
                            Background="White">

                        <materialDesign:Card UniformCornerRadius="5">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                                <ListView Focusable="True"
                                          FontFamily="{StaticResource MaterialDesignFont}"
                                          Foreground="Black"
                                          FontSize="14"
                                          ToolTip="Nháy đúp để xem chi tiết" 
                                          d:ItemsSource="{d:SampleData ItemCount=8}">
                                    <ListView.View>

                                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">

                                            <GridViewColumn Width="50" Header="ID">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="P101" 
                                                                   Width="30"
                                                                   FontSize="14" 
                                                                   Margin="0 8 0 0"
                                                                   HorizontalAlignment="Center"
                                                                   TextAlignment="Left"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn Width="130" Header="Loại phòng">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="Phòng thương gia" 
                                                                   Width="120"
                                                                   FontSize="14" 
                                                                   Margin="0 8 0 0"
                                                                   HorizontalAlignment="Center"
                                                                   TextAlignment="Left"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn Width="60" Header="Thêm" >
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button HorizontalAlignment="Left" 
                                                                VerticalAlignment="Center" 
                                                                Background="#009099" 
                                                                Width="40">
                                                            <Image Source="{StaticResource iconAddDP}" 
                                                                   Height="10" 
                                                                   Width="10" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                        </Button>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="86*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" 
                       Content="PHÒNG ĐÃ CHỌN" 
                       FontSize="18" 
                       Foreground="#C95D3B" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       VerticalContentAlignment="Top" 
                       Margin="30 0 0 0"/>

                <Grid Grid.Row="1">
                    <Border Margin="30 0 30 0" 
                            CornerRadius="5" 
                            Background="White">
                        <materialDesign:Card UniformCornerRadius="5">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                                <ListView Focusable="True"
                                          FontFamily="{StaticResource MaterialDesignFont}"
                                          Foreground="Black"
                                          FontSize="14"
                                          ToolTip="Nháy đúp để xem chi tiết" d:ItemsSource="{d:SampleData ItemCount=8}">

                                    <ListView.View>

                                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">

                                            <GridViewColumn Width="80" Header="ID">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="P101" 
                                                                   Width="50"
                                                                   FontSize="14" 
                                                                   Margin="0 8 0 0"
                                                                   HorizontalAlignment="Center"
                                                                   TextAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn Width="80" Header="Số người">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="2" 
                                                                   Width="40"
                                                                   FontSize="14" 
                                                                   Margin="0 8 0 0"
                                                                   HorizontalAlignment="Center"
                                                                   TextAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn Width="75" Header="Xóa" >
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Background="#EA0808" 
                                                                Width="40">
                                                            <Image Source="{StaticResource iconXoa}" 
                                                                   Height="16" 
                                                                   Width="20" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                        </Button>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Button Grid.Row="6" 
                Content="Xác nhận" 
                Background="#009099" 
                Width="100" Height="32" 
                Foreground="White" 
                HorizontalAlignment="Right" 
                Margin="0 0 40 0"/>
    </Grid>
</Window>
